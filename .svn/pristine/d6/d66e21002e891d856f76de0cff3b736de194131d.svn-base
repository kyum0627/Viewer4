using System;

namespace IGX.Geometry.DataStructure.IgxMesh
{
    public struct Eedge
    {
        public int V0 { get; }
        public int V1 { get; }

        public Eedge(int v0, int v1)
        {
            if (v0 < v1)
            {
                V0 = v0;
                V1 = v1;
            }
            else
            {
                V0 = v1;
                V1 = v0;
            }
        }
        public override bool Equals(object obj)
        {
            return obj is Eedge other &&
                   V0 == other.V0 &&
                   V1 == other.V1;
        }

        public override int GetHashCode()
        {
            return HashCode.Combine(V0, V1);
        }
        public Vertex[] GetVertices(IgxMesh mesh)
        {
            return new Vertex[2] { mesh.UniqueVertices[V0], mesh.UniqueVertices[V1] };
        }
    }
}