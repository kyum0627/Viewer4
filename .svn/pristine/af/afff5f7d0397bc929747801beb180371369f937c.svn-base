using IGX.Geometry.Common;
using IGX.Geometry.ConvexHull;
using IGX.Geometry.DataStructure;
using IGX.Geometry.DataStructure.IgxMesh;
using IGX.Loader;
using OpenTK.Mathematics;

namespace IGX.ViewControl.Render
{
    public static class ModelQuery
    {
        public static int GetPartID(Model3D model, int geometryId) => model.GetAssemblyIndex(geometryId);
        public static GeometryInstance? GetGeometryInstance(Model3D model, int geometryId) => model.GetGeometryInstance(geometryId);
        public static AABB3 GetGeometryAABB(Model3D model, int geometryId) => model.GetGeometryAABB(geometryId);
        public static Vector4 GetGeometryColor(Model3D model, int geometryId) => model.GetGeometryColor(geometryId);
        public static List<int> GetGeometryIdsOfThePart(Model3D model, int partId) => model.GetGeometryIdsOfThePart(partId);
        public static List<int> GetGeometryIdsInAssemblyTree(Model3D model, int assyKey) => Model3DQuery.GetGeometryIdsInAssemblyTree(model, assyKey);
        public static int GetGeometryLayer(Model3D model, int geometryId) => model.GetGeometryLayer(geometryId);
        public static OOBB3 GetGeometryOOBB(Model3D model, int geometryId) => model.GetGeometryOOBB(geometryId);
        public static string? GetGrandPrimitiveType(Model3D model, int geometryId) => model.GetGrandPrimitiveType(geometryId);
        public static IgxMesh? GetIgxMesh(Model3D model, int geometryId) => model.GetIgxMesh(geometryId);
        public static MeshInstanceGL[] GetMeshInstance(Model3D model, int geometryId) => [new MeshInstanceGL(model.GetGeometryInstance(geometryId)!, model.GetGrandPrimitiveType(geometryId)!)];
        public static ParaPrimType GetPrimitiveType(Model3D model, int geometryId) => model.GetPrimitiveType(geometryId);
        public static void SetGeometryColor(Model3D model, int geometryId, Vector4 color, bool transparent) => model.SetGeometryColor(geometryId, color, transparent);
        public static void SetGeometryLayer(Model3D model, int geometryId, int layer) => model.SetGeometryLayer(geometryId, layer);
        public static void SetGeometrySelectionMode(Model3D model, int geometryId, SelectTo sm = SelectTo.None) => model.SetGeometrySelectionMode(geometryId, sm);
        public static float? Thickness(Model3D model, int geometryID) => model.Thickness(geometryID);
    }
}