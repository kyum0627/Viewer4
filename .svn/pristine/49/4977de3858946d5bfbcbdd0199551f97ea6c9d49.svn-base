using IGX.Geometry.DataStructure;
using OpenTK.Mathematics;
namespace IGX.ViewControl
{
    public enum ShadeMode
    {
        Flat = (int)0,
        Xray = (int)1,
        OUTLINE = (int)2,
        Phong = (int)3,
    }

    public class ShaderParameters
    {
        private ShadeMode _mode = ShadeMode.Phong;

        public event EventHandler<EventArgs> ModeChanged;

        public ShadeMode Mode
        {
            get => _mode;
            set
            {
                if (_mode != value)
                {
                    _mode = value;
                    OnModeChanged();
                }
            }
        }

        public bool DisplayEdge { get; set; } = true;
        public Vector3 EdgeColor { get; set; } = MyColor.ToBuffer(Color.Black).Xyz;
        public float EdgeThickness { get; set; } = 1f;
        public string FragShaderFile { get; set; } = "all_frag.glsl";
        public string VertexShaderFile { get; set; } = "uni_vert.glsl";

        // 이벤트 호출을 위한 헬퍼 메서드
        protected virtual void OnModeChanged()
        {
            ModeChanged?.Invoke(this, EventArgs.Empty);
        }
    }
}