using OpenTK.Graphics.OpenGL4;
using OpenTK.Mathematics;
using SixLabors.ImageSharp.PixelFormats;
using SixLabors.ImageSharp.Processing;
using Image = SixLabors.ImageSharp.Image;

namespace IGX.ViewControl.Render
{
    public class BackGroundRenderer : IDisposable
    {
        private int vao, vbo;
        private int infoTexture;

        private readonly float[] quadVertices =
        {
            -1.0f,  1.0f,    0.0f, 1.0f,
            -1.0f, -1.0f,    0.0f, 0.0f,
             1.0f, -1.0f,    1.0f, 0.0f,
            -1.0f,  1.0f,    0.0f, 1.0f,
             1.0f, -1.0f,    1.0f, 0.0f,
             1.0f,  1.0f,    1.0f, 1.0f
        };

        private readonly Shader shader;
        private bool disposed = false;

        public BackGroundRenderer()
        {
            shader = new Shader(ShaderSource.backgroundVertexGlsl, ShaderSource.backgroundFragmentGlsl, false);

            InitializeQuad();

            string texturePath = Path.Combine(AppContext.BaseDirectory, "Shaders", "infoget.png");
            LoadTexture(texturePath);

            shader.Use();
            shader.SetUniformIfExist("backgroundTexture", 0);
            GL.UseProgram(0);
        }

        private void InitializeQuad()
        {
            vao = GL.GenVertexArray();
            vbo = GL.GenBuffer();

            GL.BindVertexArray(vao);
            GL.BindBuffer(BufferTarget.ArrayBuffer, vbo);
            GL.BufferData(BufferTarget.ArrayBuffer, quadVertices.Length * sizeof(float), quadVertices, BufferUsageHint.StaticDraw);

            GL.EnableVertexAttribArray(0);
            GL.VertexAttribPointer(0, 2, VertexAttribPointerType.Float, false, 4 * sizeof(float), 0);

            GL.EnableVertexAttribArray(1);
            GL.VertexAttribPointer(1, 2, VertexAttribPointerType.Float, false, 4 * sizeof(float), 2 * sizeof(float));

            GL.BindBuffer(BufferTarget.ArrayBuffer, 0); GL.BindVertexArray(0);
        }
        private void LoadTexture(string imagePath)
        {
            if (!File.Exists(imagePath))
            {
                throw new FileNotFoundException("Texture image not found", imagePath);
            }

            using SixLabors.ImageSharp.Image<Rgba32> image = Image.Load<Rgba32>(imagePath);
            image.Mutate(x => x.Flip(FlipMode.Vertical));

            infoTexture = GL.GenTexture();
            GL.BindTexture(TextureTarget.Texture2D, infoTexture);

            byte[] pixelArray = new byte[image.Width * image.Height * 4];
            image.CopyPixelDataTo(pixelArray.AsSpan());
            Span<byte> pixelData = pixelArray.AsSpan();
            unsafe
            {
                fixed (byte* ptr = pixelData)
                {
                    GL.TexImage2D(
                        TextureTarget.Texture2D,
                        0,
                        PixelInternalFormat.Rgba,
                        image.Width,
                        image.Height,
                        0,
                        PixelFormat.Rgba,
                        PixelType.UnsignedByte,
                        (nint)ptr);
                }
            }
            GL.TexParameter(TextureTarget.Texture2D, TextureParameterName.TextureMinFilter, (int)TextureMinFilter.LinearMipmapLinear);
            GL.TexParameter(TextureTarget.Texture2D, TextureParameterName.TextureMagFilter, (int)TextureMagFilter.Linear);
            GL.TexParameter(TextureTarget.Texture2D, TextureParameterName.TextureWrapS, (int)TextureWrapMode.ClampToEdge);
            GL.TexParameter(TextureTarget.Texture2D, TextureParameterName.TextureWrapT, (int)TextureWrapMode.ClampToEdge);
            GL.GenerateMipmap((GenerateMipmapTarget)TextureTarget.Texture2D);
            GL.BindTexture(TextureTarget.Texture2D, 0);
        }

        public void Draw(int width, int height)
        {
            shader.Use();

            shader.SetUniformIfExist("iResolution", new Vector2(width, height));

            GL.ActiveTexture(TextureUnit.Texture0);
            GL.BindTexture(TextureTarget.Texture2D, infoTexture);

            GL.BindVertexArray(vao);
            GL.DrawArrays(PrimitiveType.Triangles, 0, 6);

            GL.BindVertexArray(0);
            GL.BindTexture(TextureTarget.Texture2D, 0);
        }

        public void Dispose()
        {
            if (disposed) return;
            disposed = true;

            if (vao != 0) GL.DeleteVertexArray(vao);
            if (vbo != 0) GL.DeleteBuffer(vbo);
            if (infoTexture != 0) GL.DeleteTexture(infoTexture);

            shader?.Dispose();

            GC.SuppressFinalize(this);
        }
    }
}