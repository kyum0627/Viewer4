using IGX.Geometry.Common;
using IGX.Geometry.DataStructure;
using IGX.Loader;
using IGX.ViewControl.Render;
using OpenTK.Mathematics;

namespace IGX.ViewControl
{
    public class ModelManager
    {
        private List<Model3D> _models { get; } = new List<Model3D>();
        private AABB3 _totalAabb { get; set; } = AABB3.Empty;
        private readonly List<DrawElementsIndirect<Vertex, uint, MeshInstanceGL>> _sharedGLResources;

        private readonly object _lockObject = new();

        public AABB3 TotalAabb => _totalAabb;
        public IReadOnlyList<Model3D> Models => _models;
        public ModelManager(int initialCapacity = 100)
        {
            _sharedGLResources = new List<DrawElementsIndirect<Vertex, uint, MeshInstanceGL>>();
            _models = new List<Model3D>(initialCapacity);
        }
        public void NewModel(Dictionary<string, Model3D> source)
        {
            if (source == null)
            {
                throw new ArgumentNullException(nameof(source));
            }
            lock (_lockObject)
            {
                ClearModels();
                _models.AddRange(source.Values.Where(m => m != null));
                AABB3 aabb = AABB3.Empty;
                AddModels(ref aabb);
                _totalAabb = aabb;
            }
        }
        public int AddModels(ref AABB3 aabb)
        {
            lock (_lockObject)
            {
                int startModelID = 0;
                foreach (Model3D model in _models)
                {
                    if (model == null)
                    {
                        Console.WriteLine($"Warning: Skipping null model at index {startModelID}.");
                        continue;
                    }
                    try
                    {
                        var renderData = RendererDataBuilder.Build(startModelID, model); // 모델별 render data 생성
                        if (renderData.Vertices.Count == 0 || renderData.TriIndices.Count == 0)
                        {
                            Console.WriteLine($"Warning: Model {startModelID} has no vertices or indices.");
                            continue;
                        }
                        var glbuffer = new DrawElementsIndirect<Vertex, uint, MeshInstanceGL>(
                            renderData.Vertices.ToArray(),
                            renderData.TriIndices.ToArray(),
                            renderData.InstInstances.ToArray(),
                            renderData.Commands.ToArray());
                        _sharedGLResources.Add(glbuffer);
                        aabb.Contain(renderData.ModelAabb);
                        startModelID++;
                    }
                    catch (Exception ex)
                    {
                        Console.WriteLine($"Error building render data for model {startModelID}: {ex.Message}");
                    }
                }
                return _models.Count;
            }
        }

        public void ClearModels()
        {
            lock (_lockObject)
            {
                // 모든 OpenGL 리소스 해제
                foreach (var renderer in _sharedGLResources)
                {
                    try
                    {
                        renderer?.Dispose(); // InstancedMultiDraw에 Dispose 메서드가 있다고 가정
                    }
                    catch (Exception ex)
                    {
                        Console.WriteLine($"Error disposing renderer: {ex.Message}");
                    }
                }
                _sharedGLResources.Clear();
                _models.Clear();
                _totalAabb = AABB3.Empty;
            }
        }


        public void RevertInstanceBuffer(int modelID, int geometryID)
        {
            if (!IsValidModelID(modelID) || !IsValidGeometryID(modelID, geometryID))
            {
                Console.WriteLine($"Invalid modelID {modelID} or geometryID {geometryID}.");
                return;
            }
            lock (_lockObject)
            {
                try
                {
                    MeshInstanceGL[] instanceData = ModelQuery.GetMeshInstance(_models[modelID], geometryID);
                    if (instanceData?.Length > 0)
                    {
                        _sharedGLResources[modelID]._indirectCommandBuffer.UpdateSingleInstance(geometryID, instanceData[0]);
                    }
                    else
                    {
                        Console.WriteLine($"No instance data for model {modelID}, geometry {geometryID}.");
                    }
                }
                catch (Exception ex)
                {
                    Console.WriteLine($"Error reverting instance _instancedBuffer for model {modelID}, geometry {geometryID}: {ex.Message}");
                }
            }
        }

        public IReadOnlyList<DrawElementsIndirect<Vertex, uint, MeshInstanceGL>> ModelRender
        {
            get
            {
                lock (_lockObject)
                {
                    return _sharedGLResources.AsReadOnly();
                }
            }
        }
        public void SetObjectDisplayColor(int modelid, int gemetryid, SelectTo selectTo, Vector4 color) => SetObjectDisplayData(modelid, gemetryid, selectTo, color);

        public void SetObjectDisplayData(int modelID, int geometryID, SelectTo selectTo, Vector4? color = null, int? layer = null)
        {
            if (!IsValidModelID(modelID) || !IsValidGeometryID(modelID, geometryID))
            {
                Console.WriteLine($"Invalid modelID {modelID} or geometryID {geometryID}.");
                return;
            }
            try
            {
                MeshInstanceGL[] instanceData = ModelQuery.GetMeshInstance(_models[modelID], geometryID);
                if (instanceData?.Length > 0)
                {
                    UpdateInstanceGLData(instanceData, selectTo, color, layer);
                    _sharedGLResources[modelID]._indirectCommandBuffer.UpdateSingleInstance(geometryID, instanceData[0]);
                }
                else
                {
                    Console.WriteLine($"No instance data for model {modelID}, geometry {geometryID}.");
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error setting display data for model {modelID}, geometry {geometryID}: {ex.Message}");
            }
        }

        public void UpdateSingleInstance(int modelID, int geoID, MeshInstanceGL instance)
        {
            if (!IsValidModelID(modelID))
            {
                Console.WriteLine($"Invalid modelID {modelID}.");
                return;
            }
            lock (_lockObject)
            {
                try
                {
                    _sharedGLResources[modelID]._indirectCommandBuffer.UpdateSingleInstance(geoID, instance);
                }
                catch (Exception ex)
                {
                    Console.WriteLine($"Error updating single instance for model {modelID}, geometry {geoID}: {ex.Message}");
                }
            }
        }

        private bool IsValidModelID(int modelID)
        {
            return modelID >= 0 && modelID < _sharedGLResources.Count && _sharedGLResources[modelID] != null;
        }

        private bool IsValidGeometryID(int modelID, int geometryID)
        {
            if (!IsValidModelID(modelID)) return false;
            // geometryID의 유효성 검사는 ModelQuery.GetMeshInstance 또는 모델 데이터에 따라 추가 확인 필요
            return geometryID >= 0;
        }

        private static void UpdateInstanceGLData(MeshInstanceGL[] instanceData, SelectTo selectTo, Vector4? color, int? layer)
        {
            if (instanceData == null || instanceData.Length == 0) return;

            if (color.HasValue)
            {
                instanceData[0].Color = color.Value;
            }
            if (layer.HasValue)
            {
                instanceData[0].Layer = layer.Value;
            }
            instanceData[0].SelectionMode = (int)selectTo;
        }
    }
}