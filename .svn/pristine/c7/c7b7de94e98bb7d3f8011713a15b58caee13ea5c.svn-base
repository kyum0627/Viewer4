using IGX.ViewControl.Render;
using OpenTK.Mathematics;

namespace IGX.ViewControl
{
    public class IgxViewAPI
    {
        public ModelManager ModelManager { get; }
        public ModelRendererManager RenderManager { get; }
        public SelectionManager SelectionManager { get; }
        public List<Vector4> ClipPlanes { get; set; }

        public ShaderParameters Shading;
        public AuxillaryDrawSetting Drawing;
        public LightingParameters Lighting;
        public SceneParameters Scene;
        public Vector4 BackGroundColor => Scene.BackGroundColor;

        public IgxViewAPI()
        {
            ModelManager = new ModelManager();
            Shading = new ShaderParameters();
            Drawing = new AuxillaryDrawSetting();
            Lighting = new LightingParameters();
            Scene = new SceneParameters();
            RenderManager = new ModelRendererManager(ModelManager);
            SelectionManager = new SelectionManager(ModelManager);
            ClipPlanes = new List<Vector4>();
        }
        public IgxViewAPI(ShaderParameters shading, AuxillaryDrawSetting drawing , LightingParameters lightinh , SceneParameters scene, ModelManager modelManager, ModelRendererManager renderer, SelectionManager selectionManager)
        {
            this.Shading = shading;
            this.Drawing = drawing;
            this.Lighting = lightinh;
            this.Scene = scene;
            ModelManager = modelManager;
            RenderManager = renderer;
            SelectionManager = selectionManager;
            ClipPlanes = [];
        }
    }
}